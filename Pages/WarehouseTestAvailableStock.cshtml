                <table class="table table-striped text-center mt-3" id="dataTable2" data-excel-name="庫存數量">
                    <thead>
                        <tr>
                            <th>模板全名</th>
                            <th>名稱</th>
                            <th>SPCode</th>
                            <th>W1</th>
