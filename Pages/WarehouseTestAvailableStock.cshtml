                            @foreach (var key in Model.WarehouseTestAvailableDetailedStockDictionary.Keys)
                            {
                                var groupedItems = Model.WarehouseTestAvailableDetailedStockDictionary[key]
                                .GroupBy(item => new { item.FormworkName, item.WarehouseItems.FirstOrDefault()?.SPCode });

                                //Console.WriteLine("[Page]: FormworkName = " + key);

                                foreach (var group in groupedItems)
