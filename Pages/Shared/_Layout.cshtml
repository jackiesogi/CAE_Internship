    <script>
        $(document).ready(function () {
            $('.dropdown-menu a.dropdown-toggle').on('click', function (e) {
                if (!$(this).next().hasClass('show')) {
                    $(this).parents('.dropdown-menu').first().find('.show').removeClass('show');
                }
                var $subMenu = $(this).next('.dropdown-menu');
                $subMenu.toggleClass('show');
                $(this).parents('li.nav-item.dropdown.show').on('hidden.bs.dropdown', function (e) {
                    $('.dropdown-submenu .show').removeClass('show');
                });
                return false;
            });
        });
    </script>

    <script>
        $(document).ready(function () {
            $(document).on('click', '.increase', function () {
                var select = $(this).siblings('.factory-stock');
                var value = parseInt(select.val());
                var max = parseInt(select.data('max'));
                if (value < max) {
                    select.val(value + 1);
                }
            });

            $(document).on('click', '.decrease', function () {
                var select = $(this).siblings('.factory-stock');
                var value = parseInt(select.val());
                if (value > 0) {
                    select.val(value - 1);
                }
            });

            $(document).on('click', '.confirm-button', function () {
                $(this).attr('hidden', true);
                $(this).siblings('.edit-button').removeAttr('hidden');
                $(this).closest('td').siblings().find('select, .increase, .decrease').prop('disabled', true);
            });

            $(document).on('click', '.edit-button', function () {
                $(this).attr('hidden', true);
                $(this).siblings('.confirm-button').removeAttr('hidden');
                $(this).closest('td').siblings().find('select, .increase, .decrease').prop('disabled', false);
            });

        });
    </script>


